# This is a wrapper for running mesos-slave before it is installed
# that first sets up environment variables as appropriate.


# mesos-locald - Startup script for Mesos Local

# chkconfig: 35 85 15
# description: 
# processname: mesos-locald
# config: /etc/mesos.conf
# pidfile: /var/run/mesos/mesos-locald.pid

. /etc/rc.d/init.d/functions

# NOTE: if you change any OPTIONS here, you get what you pay for:
# this script assumes all options are in the config file.

ENVIRONMENT="/etc/profile.d/mesos"
if [ -x "$ENVIRONMENT" ]; then
	. "$ENVIRONMENT"
fi

CONFIGFILE="/etc/mesos/conf"
OPTIONS=" -f $CONFIGFILE"

mesosd=${MESOS_LOCALD-/usr/bin/mesos-locald}

MESOS_USER=${MESOS_USER-mesosd}
MESOS_GROUP=${MESOS_GROUP-mesosd}

start()
{
    echo -n $"Starting Mesos Local (mesos-locald):"
    daemon --user "$MESOS_USER" $NUMACTL $mesosd $OPTIONS
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && touch /var/lock/subsys/mesos-locald
}

stop()
{
    echo -n $"Stopping Mesos Local (mesos-locald): "
    killproc -p "$PIDFILE" -d 300 $mesosd
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && rm -f /var/lock/subsys/mesos-locald
}

restart () {
	stop
	start
}

ulimit -n 12000
RETVAL=0

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart|reload|force-reload)
    restart
    ;;
  condrestart)
    [ -f /var/lock/subsys/mesos-locald ] && restart || :
    ;;
  status)
    status $mesosd
    RETVAL=$?
    ;;
  *)
    echo "Usage: $0 {start|stop|status|restart|reload|force-reload|condrestart}"
    RETVAL=1
esac

exit $RETVAL
